---
import Layout from "../layouts/Layout.astro";
import { products } from "../data/products";
---

<Layout title="Carta Benny¬¥s">
    <section class="menu min-h-screen bg-gradient-to-b from-zinc-950 via-zinc-900 to-zinc-950">
        <div class="max-w-7xl mx-auto px-4 py-8 sm:py-12">
            
            <!-- Header mejorado -->
            <div class="relative mb-12">
                <div class="absolute inset-0 bg-gradient-to-r from-red-600/20 via-red-500/20 to-red-600/20 blur-3xl"></div>
                <div class="relative bg-gradient-to-br from-zinc-900 via-black to-zinc-900 py-8 rounded-3xl border border-red-500/30 shadow-2xl">
                    <h1 class="text-4xl sm:text-5xl font-black text-center bg-gradient-to-r from-red-500 via-red-400 to-red-500 bg-clip-text text-transparent">
                        üçî Carta Benny¬¥s
                    </h1>
                    <p class="text-center text-zinc-400 mt-2 text-sm sm:text-base">Las mejores hamburguesas de la ciudad</p>
                </div>
            </div>

            <!-- Grid de productos -->
            <ul class="grid gap-6 sm:gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
                {products.map((product) => (
                    <li class="group relative">
                        <!-- Efecto de brillo en hover -->
                        <div class="absolute -inset-0.5 bg-gradient-to-r from-red-600 to-orange-600 rounded-3xl blur opacity-0 group-hover:opacity-30 transition duration-500"></div>
                        
                        <article class="relative bg-gradient-to-br from-zinc-900 to-zinc-950 border border-zinc-800/50 rounded-3xl overflow-hidden flex flex-col h-full shadow-xl hover:shadow-red-500/10 hover:-translate-y-2 transition-all duration-300">
                            
                            {/* Imagen mejorada */}
                            <div class="relative h-52 sm:h-60 w-full bg-gradient-to-br from-zinc-800 to-zinc-900 overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent z-10"></div>
                                <img
                                    src={product.image}
                                    alt={product.name}
                                    class="h-full w-full object-cover group-hover:scale-110 transition-transform duration-700"
                                    loading="lazy"
                                />
                                {/* Badge decorativo */}
                                <div class="absolute top-4 right-4 z-20 bg-red-500 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg">
                                    Especial
                                </div>
                            </div>

                            {/* Contenido */}
                            <div class="p-5 sm:p-6 flex flex-col flex-1">
                                {/* Nombre */}
                                <h2 class="font-bold text-white text-lg sm:text-xl mb-4 group-hover:text-red-400 transition-colors">
                                    {product.name}
                                </h2>

                                {/* Precios con mejor visualizaci√≥n */}
                                <div class="bg-zinc-950/50 rounded-2xl p-4 mb-4 border border-zinc-800/50">
                                    <div class="space-y-2.5">
                                        <div class="flex items-center justify-between">
                                            <span class="text-zinc-400 text-sm font-medium flex items-center gap-2">
                                                <span class="text-base">üçî</span> Simple
                                            </span>
                                            <span class="font-bold text-red-500 text-lg">
                                                ${product.price}
                                            </span>
                                        </div>
                                        
                                        <div class="flex items-center justify-between">
                                            <span class="text-zinc-400 text-sm font-medium flex items-center gap-2">
                                                <span class="text-base">üçîüçî</span> Doble
                                            </span>
                                            <span class="font-bold text-red-500 text-lg">
                                                ${product.doble}
                                            </span>
                                        </div>
                                        
                                        <div class="flex items-center justify-between">
                                            <span class="text-zinc-400 text-sm font-medium flex items-center gap-2">
                                                <span class="text-base">üçîüçîüçî</span> Triple
                                            </span>
                                            <span class="font-bold text-red-500 text-lg">
                                                ${product.triple}
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                {/* Ingredientes mejorados */}
                                <div class="mt-auto">
                                    <h3 class="text-xs font-semibold text-zinc-500 uppercase tracking-wider mb-2">
                                        Ingredientes
                                    </h3>
                                    <div class="flex flex-wrap gap-2">
                                        {product.ingredients.map((ing) => (
                                            <span class="inline-flex items-center bg-zinc-800/50 text-zinc-300 px-3 py-1 rounded-full text-xs border border-zinc-700/50 hover:border-red-500/50 hover:text-red-400 transition-colors">
                                                {ing}
                                            </span>
                                        ))}
                                    </div>
                                </div>
                            </div>
                        </article>
                    </li>
                ))}
            </ul>

        </div>
    </section>
</Layout>